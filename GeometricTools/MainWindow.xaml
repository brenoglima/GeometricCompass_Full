<Window x:Class="GeometricTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeometricTools"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Loaded="Window_Loaded" Width="800">
    <Grid>
        <Button Width="50" Height="30" Content="Click" VerticalAlignment="Top" />
        <Canvas x:Name="CanvasCompass">
            <local:DSCompass x:Name="Compasso" Width="500" Height="60" Canvas.Left="200" Canvas.Top="200" />
        </Canvas>
    </Grid>
</Window>
